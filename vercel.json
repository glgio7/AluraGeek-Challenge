{
	"version": 2,
	"builds": [
		{ "src": "server/src/index.ts", "use": "@vercel/node" },
		{
			"src": "client/src/index.tsx",
			"use": "@vercel/static-build",
			"config": {
				"outputDirectory": "client/dist",
				"entryFiles": ["client/src/index.html"]
			}
		}
	],
	"routes": [
		{ "handle": "filesystem" },
		{
			"src": "/api/(.*)",
			"dest": "server/src/index.ts"
		},
		{
			"src": "/(.*)",
			"dest": "client/index.html"
		}
	]
}
