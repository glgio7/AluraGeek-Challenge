{
	"version": 2,
	"builds": [
		{ "src": "server/src/index.ts", "use": "@vercel/node" },
		{
			"src": "client/package.json",
			"use": "@vercel/static-build",
			"config": {
				"public": true
			}
		}
	],
	"routes": [
		{ "handle": "filesystem" },
		{
			"src": "/api/(.*)",
			"dest": "server/src/index.ts"
		},
		{
			"src": "/(.*)",
			"dest": "client/index.html"
		}
	]
}
